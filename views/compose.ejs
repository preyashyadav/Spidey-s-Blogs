<%- include("partials/header"); -%>

<h1>Compose</h1>

<div class="container">
  <form action="/compose" method="post" class="form-group">
    <div class="form-group">
      <label>Text</label>
      <input
        type="text"
        class="form-control"
        name="postTitle"
        autocomplete="off"
      />
    </div>
    <div class="form-group">
      <label>Post</label>
      <textarea
        class="form-control"
        name="postContent"
        rows="5"
        column="30"
        autocomplete="off"
      ></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
  </form>
</div>

<%- include("partials/footer"); -%>
